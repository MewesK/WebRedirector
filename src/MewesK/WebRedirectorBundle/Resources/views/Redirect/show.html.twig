{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Redirect</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Hostname</th>
            <td>{{ entity.hostname }}</td>
        </tr>
        <tr>
            <th>Path</th>
            <td>{{ entity.path }}</td>
        </tr>
        <tr>
            <th>Destination</th>
            <td>{{ entity.destination }}</td>
        </tr>
        <tr>
            <th>Isregex</th>
            <td>{{ entity.isRegex }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('admin') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('admin_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
