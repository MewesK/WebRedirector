{% extends 'MewesKWebRedirectorBundle::base.html.twig' %}

{% block headline %}Redirect{% endblock %}

{% block content %}
    <table class="table table-striped">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Hostname</th>
            <td>{{ entity.hostname }}</td>
        </tr>
        <tr>
            <th>Path</th>
            <td>{{ entity.path }}</td>
        </tr>
        <tr>
            <th>Destination</th>
            <td>{{ entity.destination }}</td>
        </tr>
        <tr>
            <th>Isregex</th>
            <td>{{ entity.isRegex }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('admin') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('admin_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
